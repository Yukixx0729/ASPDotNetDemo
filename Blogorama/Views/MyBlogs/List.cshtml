@model List<Blogorama.Models.Entities.Blog>



@if (Model.Count == 0)
{
    <p>No blogs yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var blog in Model)
        {
            <li class="list-group-item mt-3 d-flex justify-content-between">
                <a asp-controller="MyBlogs" asp-action="Details" asp-route-id="@blog.BlogId">@blog.Title</a>
                <span>@blog.CreatedAt</span>
            </li>
        }
    </ul>
}